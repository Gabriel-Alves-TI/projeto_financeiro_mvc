<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Controle Financeiro</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/projeto_financeiro_mvc.styles.css" asp-append-version="true" />
</head>
<body class="container-fluid p-1 d-flex flex-wrap">
    <header class="w-100 d-flex align-items-center px-3" style="height: 60px; overflow: hidden; background-image: linear-gradient(rgb(214, 214, 213), rgb(255, 255, 255));">
        <h1 class="mb-0 text-primary">Controle Financeiro</h1>
    </header>

    <nav class="col-12 col-md-3 col-lg-2 bg-white me-md-0 mb-1 p-1 mt-2" style="min-height: calc(100vh - 144px);">
        <div class="w-100 position-relative mt-2">
            <ul class="list-group border border-2">
                <li class="list-group-item p-0 bg-white border border-1">
                    <a class="d-block text-primary py-2 px-3"
                    asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-columns-gap me-2"></i> Dashboard
                    </a>
                </li>
                <li class="list-group-item p-0 bg-white border border-1">
                    <a class="d-block text-primary py-2 px-3">
                        <i class="bi bi-graph-up-arrow me-2"></i> Metas
                    </a>
                </li>
                <li class="list-group-item p-0 bg-white border border-1">
                    <a asp-controller="Lancamento" asp-action="Index" class="d-block text-primary py-2 px-3">
                        <i class="bi bi-cash-coin me-2"></i>
                        Lançamentos
                    </a>
                </li>
                <li class="list-group-item p-0 bg-white border border-1">
                    <a class="d-block text-primary py-2 px-3">
                        <i class="bi bi-file-earmark-text me-2"></i>
                        Extrato
                    </a>
                </li>
                <li class="list-group-item p-0 bg-white border border-1">
                    <a class="d-block text-primary py-2 px-3" asp-controller="Conta" asp-action="ListarContas">
                        <i class="bi bi-coin me-2"></i>
                        Contas
                    </a>
                </li>
            </ul>
            <div class="d-flex justify-content-end align-items-end">
                <img src="/img/finances.jpg" class="w-100">
            </div>
        </div>
    </nav>

    <main class="col bg-light-subtle mx-2 mb-1 mt-2 d-flex flex-column" style="min-height: calc(100vh - 144px);">
        @RenderBody()
    </main>

    <footer class="w-100 d-flex align-items-center mt-1 px-3" style="height: 60px; background-image: linear-gradient(rgb(255, 255, 255), rgb(214, 214, 213));">
        <div class="container text-light">
            &copy; 2025 - EmprestimosLivros - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
