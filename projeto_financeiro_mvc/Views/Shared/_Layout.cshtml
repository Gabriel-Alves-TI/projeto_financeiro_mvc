<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title id="viewTitle">@ViewData["Title"] - Controle Financeiro</title>
    @* <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" /> *@
    @await Component.InvokeAsync("Theme")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/projeto_financeiro_mvc.styles.css" asp-append-version="true" />
</head>
<body class="container-fluid p-1 d-flex flex-wrap">
    <header class="w-100 d-flex align-items-center justify-content-between px-3" style="height: 60px; overflow: visible;">
        <h1 class="mb-0 text-primary" id="nome-sistema">Controle Financeiro</h1>
        <div class="row g-2 align-items-center p-2">
            <div class="col-auto d-flex">
                <h4 class="text-center text-primary my-0 me-2" id="nome-usuario">Olá, @ViewBag.NomeUsuario</h4>
                <div class="dropdown">
                    <a class="d-block text-primary dropdown-toggle px-2 py-0" data-bs-toggle="dropdown" role="button">
                        <i class="bi bi-gear-fill fs-5"></i>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Preferences">Preferências</a></li>
                        <li><a class="dropdown-item" >Another action</a></li>
                        <li><a class="dropdown-item" >Something else here</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-auto hide" id="sair-sistema">
                <a class="text-primary"
            asp-controller="Login" asp-action="Logout">
                    <i class="bi bi-box-arrow-left fs-3"></i> Sair
                </a>
            </div>            
        </div>
        <div class="d-none" id="btn-menu">
            <i class="bi bi-list text-primary fs-3"></i>
        </div>
    </header>

    <div class="overlay d-none" id="overlay"></div>

    <nav class="d-none" id="nav-mobile">
        <ul class="list-group border border-2 menu">
            <li class="list-group-item p-0 border border-1">
                <a class="d-block text-primary py-2 px-3"
                asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-columns-gap me-2"></i> Dashboard
                </a>
            </li>
            <li class="list-group-item p-0 border border-1" id="metas">
                <a class="d-block text-primary py-2 px-3">
                    <i class="bi bi-graph-up-arrow me-2"></i> Metas
                </a>
            </li>
            <li class="list-group-item p-0 border border-1">
                <a asp-controller="Lancamento" asp-action="Index" class="d-block text-primary py-2 px-3">
                    <i class="bi bi-cash-coin me-2"></i>
                    Lançamentos
                </a>
            </li>
            <li class="list-group-item p-0 border border-1">
                <a asp-controller="Categoria" asp-action="Index" class="d-block text-primary py-2 px-3">
                    <i class="bi bi-tags me-2"></i>
                    Categorias
                </a>
            </li>
            <li class="list-group-item p-0 border border-1">
                <a class="d-block text-primary py-2 px-3" asp-controller="Extrato" asp-action="Index">
                    <i class="bi bi-file-earmark-text me-2"></i>
                    Extrato
                </a>
            </li>
            <li class="list-group-item p-0 border border-1">
                <a class="d-block text-primary py-2 px-3" asp-controller="Conta" asp-action="ListarContas">
                    <i class="bi bi-coin me-2"></i>
                    Contas
                </a>
            </li>
            <li class="list-group-item p-0 border border-2"></li>
            <li class="list-group-item p-0 border border-1">
                <a class="text-primary d-block text-primary px-3"
                    asp-controller="Login" asp-action="Logout">
                    <i class="bi bi-box-arrow-left fs-3"></i> Sair
                </a>
            </li>
        </ul>
    </nav>

    <nav class="col-12 col-md-3 col-lg-2 me-md-0 p-1 mt-2 " style="min-height: calc(100vh - 144px);" id="nav-menu">
        <div class="w-100 position-relative mt-2">
            <ul class="list-group border border-2 border-primary menu mb-2">
                <li class="list-group-item p-0 border-bottom border-1 border-primary">
                    <a class="d-block text-primary py-2 px-3"
                    asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-columns-gap me-2"></i> Dashboard
                    </a>
                </li>
                <li class="list-group-item p-0 border-bottom border-1 border-primary" id="metas">
                    <a class="d-block text-primary py-2 px-3">
                        <i class="bi bi-graph-up-arrow me-2"></i> Metas
                    </a>
                </li>
                <li class="list-group-item p-0 border-bottom border-1 border-primary">
                    <a asp-controller="Lancamento" asp-action="Index" class="d-block text-primary py-2 px-3">
                        <i class="bi bi-cash-coin me-2"></i>
                        Lançamentos
                    </a>
                </li>
                <li class="list-group-item p-0 border-bottom border-1 border-primary">
                    <a asp-controller="Categoria" asp-action="Index" class="d-block text-primary py-2 px-3">
                        <i class="bi bi-tags me-2"></i>
                        Categorias
                    </a>
                </li>
                <li class="list-group-item p-0 border-bottom border-1 border-primary">
                    <a class="d-block text-primary py-2 px-3" asp-controller="Extrato" asp-action="Index">
                        <i class="bi bi-file-earmark-text me-2"></i>
                        Extrato
                    </a>
                </li>
                <li class="list-group-item p-0 border-bottom border-1 border-primary">
                    <a class="d-block text-primary py-2 px-3" asp-controller="Conta" asp-action="ListarContas">
                        <i class="bi bi-coin me-2"></i>
                        Contas
                    </a>
                </li>
            </ul>
            <div class="d-flex justify-content-end align-items-end">
                @{
                    var tituloView = ViewData["Title"]?.ToString();
                }
                
                @if (tituloView == "Dashboard")
                {
                    <img id="img-nav" class="w-100">
                }
                else if (tituloView == "Metas")
                {
                    <img alt="Metas">
                }
                else if (tituloView == "Lançamentos" || tituloView == "Novo Lançamento" || tituloView == "Editar Lançamento" || tituloView == "Excluir Lançamento" || tituloView == "Cadastrar Recorrente" || tituloView == "Editar Recorrente" || tituloView == "Excluir Recorrente"|| tituloView == "Transferência entre Contas" || tituloView == "Excluir Transferência")
                {
                    <img id="img-nav" class="w-100" >
                }
                else if(tituloView == "Categorias" || tituloView == "Cadastrar Categoria" || tituloView == "Editar Categoria" || tituloView == "Excluir Categoria")
                {
                    <img id="img-nav" class="w-100" >
                }
                else if(tituloView == "Extrato")
                {
                    <img id="img-nav" class="w-100">
                }
                else if(tituloView == "Contas" || tituloView == "Cadastrar Conta" || tituloView == "Editar Conta" || tituloView == "Excluir Conta")
                {
                    <img id="img-nav" class="w-100" >
                }
                else if(tituloView == "Configurações" || tituloView == "Preferências")
                {
                    <img id="img-nav" class="w-100">
                }
                else if(tituloView == "Temas")
                {
                    <img id="img-nav" class="w-100">
                }
                
            </div>
        </div>
    </nav>

    <main class="col col-12 col-md mx-2 mb-1 mt-2 d-flex flex-column overflow-auto border-start border-1 border-primary" style="max-height: calc(100vh - 144px);">
        @RenderBody()
    </main>

    <footer class="w-100 d-flex align-items-center mt-1 px-3" style="height: 60px;">
        <div class="container text-center text-primary">
            &copy; 2025 - Controle Financeiro - Desenvolvido por Gabriel Alves
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/changeTheme.js" asp-append-version="true"></script>
</body>
</html>
<div id="spinnerCarregando" class="d-none position-fixed top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 d-flex justify-content-center align-items-center" style="z-index: 2000;">
    <div class="d-flex flex-column align-items-center justify-content-center bg-white rounded-4 p-4" id="boxSpinner">
        <div class="loading-wave">
            <div class="loading-bar"></div>
            <div class="loading-bar"></div>
            <div class="loading-bar"></div>
            <div class="loading-bar"></div>
        </div>
        <p class="text-primary text-center mt-2">Carregando...</p>
    </div>
</div>
<script>
    const form = document.querySelector('form');
    const spinner = document.getElementById('spinnerCarregando');

    form.addEventListener("submit", (e) => {
        spinner.classList.remove("d-none");

        e.preventDefault();

        setTimeout(() => {
            form.submit();
        }, 800); 
    });
</script>