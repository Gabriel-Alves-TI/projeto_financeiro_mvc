<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Controle Financeiro</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/projeto_financeiro_mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="w-100 d-flex align-items-center px-3" style="height: 60px; overflow: hidden; background-image: linear-gradient(rgb(214, 214, 213), rgb(255, 255, 255));">
        <h1 class="mb-0 text-primary">Controle Financeiro</h1>
    </header>
    <div class="col d-flex justify-content-center flex-column" style="min-height: 100vh">
        @RenderBody()
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>