            type: 'bar',
            data: {
                labels: ["Dom", "Seg", "Ter", "Qua", "Quin", "Sex", "Sab"],
                datasets: [
                    {
                        label: 'Recebido',
                        data: [150, 250, 40, 2500, 0, 260, 200],
                        backgroundColor: 'green', 
                        borderWidth: 1
                    },
                    {
                        label: 'Pago',
                        data: [200, 150, 450, 1300, 55, 145, 1000],
                        backgroundColor: 'red', 
                        borderWidth: 1
                    }
                ]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 50,
                            min: 0,
                            max: 150
                        }
                    }
                }
            }
        })
    }
</script>