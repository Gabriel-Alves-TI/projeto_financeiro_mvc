@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="d-flex justify-content-center text-primary fw-bold mt-2">@ViewData["Title"]</h1>

<div class="d-flex flex-wrap w-100 flex-row">
    <div class="d-flex p-4 text-start" style="max-height: 220px; flex: 1 1 0;">
        <div class="card p-2 w-100 border-success rounded rounded-3">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h5 class="card-title fs-5 text-dark">Receita</h5>
                    <i class="bi bi-arrow-up text-success fs-5"></i>
                </div>
                <p class="card-text fw-medium fs-3 mt-4 text-dark">
                    R$0000,00
                </p>
                <p class="card-text fw-light text-secondary">Comparado ao mês anterior</p>
            </div>
        </div>
    </div>
    <div class="d-flex p-4 text-start" style="max-height: 220px; flex: 1 1 0;">
        <div class="card p-2 w-100 border-danger rounded rounded-3">
            <div class="card-body p-3 w-100">
                <div class="d-flex justify-content-between">
                    <h5 class="card-title fs-5 text-dark">Despesas</h5>
                    <i class="bi bi-arrow-down text-danger fs-5"></i>
                </div>
                <p class="card-text fw-medium fs-3 mt-4 text-dark" id="valorReceitas">
                    R$0000,00
                </p>
                <p class="card-text fw-light text-secondary">Comparado ao mês anterior</p>
            </div>
        </div>
    </div>
    <div class="d-flex p-4 text-start" style="max-height: 220px; flex: 1 1 0;">
        <div class="card p-2 w-100 border-warning rounded rounded-3">
            <div class="card-body p-2 w-100">
                <div class="d-flex justify-content-between">
                    <h5 class="card-title fs-5 text-dark">Orçamento</h5>
                    <i class="bi bi-percent text-warning fs-5"></i>
                </div>
                <p class="card-text fw-medium fs-2 mt-4 text-warning">
                    0.0%
                </p>
                <div class="progress">
                    <div class="progress-bar bg-warning" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex p-4 text-start" style="max-height: 220px; flex: 1 1 0;">
        <div class="card p-2 w-100 border-info rounded rounded-3">
            <div class="card-body p-1 w-100">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="ms-2">
                        <h5 class="card-title fs-4 text-dark">Saldo Total</h5>
                        <p class="card-text fw-medium fs-3 mt-4 text-dark">R$0000,00</p>
                    </div>
                    <canvas id="myChart" width="600" height="600" style="max-width: 150px;"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex w-100 ms-4">
    <div class="container border border-2 w-50 p-2 border-primary rounded rounded-3">
        <h5 class="title p-1 text-primary">Últimos lançamentos</h5>

        <div class="container" id="list-ultLancamentos">
            <div class="card rounded rounded-3 border-warning bg-warning bg-opacity-25 d-flex flex-row align-items-center justify-content-between text-center mb-2 mt-2">
                <i class="bi bi-repeat ms-3 fs-4 text-warning"></i>
                <div class="d-flex flex-column flex-grow-1 p-0">
                    <h5 class="card-title text-dark fs-6">Aluguel</h5>
                    <span class="card-text text-dark-emphasis" style="font-size: 12px;">14, Abril - 2025</span>
                </div>
                <p class="text-danger fs-6 fw-bold mb-0 me-1"><i class="bi bi-dash"></i> R$1000,00</p>
                <div class="d-flex align-items-center justify-content-end ms-2 border-start border-2 border-dark" style="cursor: pointer">
                    <a class="text-center ms-2 me-3 fw-bold"><i class="bi bi-pencil-square text-dark"></i></a>
                    <a class="text-center me-2"><i class="bi bi-x-square-fill text-danger"></i></a>
                </div>
            </div>

            <div class="card rounded rounded-3 border-warning bg-warning bg-opacity-25 d-flex flex-row align-items-center justify-content-between text-center mb-2 mt-2">
                <i class="bi bi-repeat ms-3 fs-4 text-warning"></i>
                <div class="d-flex flex-column flex-grow-1 p-0">
                    <h5 class="card-title text-dark fs-6">Energia</h5>
                    <span class="card-text text-dark-emphasis" style="font-size: 12px;">14, Abril - 2025</span>
                </div>
                <p class="text-danger fs-6 fw-bold mb-0 me-1"><i class="bi bi-dash"></i> R$150,00</p>
                <div class="d-flex align-items-center justify-content-end ms-2 border-start border-2 border-dark" style="cursor: pointer">
                    <a class="text-center ms-2 me-3 fw-bold"><i class="bi bi-pencil-square text-dark"></i></a>
                    <a class="text-center me-2"><i class="bi bi-x-square-fill text-danger"></i></a>
                </div>
            </div>
        </div>

    </div>

    <div class="container border border-2 w-50 mx-4 p-2 border-primary rounded rounded-3">
        <h5 class="title p-1 text-primary">Balanço semanal</h5>
        <div class="d-flex p-4 text-start w-100">
            <div class="card p-3 w-100" style="max-height: min-content;">
                <div class="d-flex justify-content-between align-items-center">
                    <canvas id="balance" width="600" style="max-width: auto;"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.onload = function () {
        var saldoValor = 1000;

        var xValues = ["Despesas", "Renda"];
        var yValues = [100, saldoValor];

        var barColors = ["blueviolet", "lightgrey"];

        var myChart = document.getElementById('myChart');

        if (myChart) {
            new Chart(myChart, {
                type: "doughnut",
                data: {
                    labels: xValues,
                    datasets: [{
                        backgroundColor: barColors,
                        data: yValues
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        }
                    }
                }
            });
        }

