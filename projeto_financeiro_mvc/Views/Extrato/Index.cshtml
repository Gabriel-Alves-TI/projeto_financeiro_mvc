@model projeto_financeiro_mvc.ViewModels.ListExtratoViewModel
@{
    ViewData["Title"] = "Extrato";
}

<h1 class="d-flex justify-content-center text-primary fw-bold mt-2" id="titulo">@ViewData["Title"]</h1>

<div class="container d-flex justify-content-center mt-2">
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-white" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }
</div>

<div class="px-2" id="containerExtrato">
    <form asp-controller="Extrato" asp-action="Filtrar" method="post">
        <div class="d-flex justify-content-between align-items-center flex-column border border-2 p-2 rounded rounded-2 mb-2">
            <div class="d-flex flex-row w-100 mb-2">
                <div class="row g-1 align-items-center p-1">
                    <div class="col-auto">
                        <label for="periodo" class="col-form-label text-primary labels">Período:</label>
                    </div>
                    <div class="col-auto">
                        <input type="date" name="dataInicial" value="@Model.DataInicial?.ToString("yyyy-MM-dd")" id="dataInicial" style="width: 120px;"/>
                        <span class="text-dark"> - </span>
                        <input type="date" name="dataFinal" value="@Model.DataFinal?.ToString("yyyy-MM-dd")" id="dataFinal" style="width: 120px;"/>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-row w-100">
                <div class="row g-1 align-items-center p-1">
                    <div class="col-auto">
                        <label for="selectTipo" class="col-form-label text-primary labels" id="descricaoLabel">Descrição:</label>
                    </div>
                    <div class="col-auto">
                        <input type="text" name="descricao" id="descricaoExtrato">
                    </div>
                </div>
                <div class="row g-1 align-items-center p-1">
                    <div class="col-auto">
                        <label for="selectTipo" class="col-form-label text-primary labels">Tipo:</label>
                    </div>
                    <div class="col-auto">
                        <select class="form-select-sm" id="tipo" name="tipo">
                            <option value="" selected>Selecione...</option>
                            <option value="Receita" selected="@(Model.Tipo == "Receita")">Receita</option>
                            <option value="Despesa" selected="@(Model.Tipo == "Despesa")">Despesa</option>
                        </select>
                    </div>
                </div>
                <div class="row g-1 align-items-center p-1">
                    <div class="col-auto">
                        <label for="selectCategoria" class="col-form-label text-primary labels">Categoria:</label>
                    </div>
                    <div class="col-auto">
                    <select class="form-select-sm" id="categoria" name="categoria">
                        <option value="" selected>Selecione...</option>
                        @{
                            foreach (var categoria in Model.Categorias)
                            {
                                <option value="@categoria.Id">@categoria.Descricao</option>
                            }
                        }
                        </select>
                    </div>
                </div>
                
                <div class="row g-1 align-items-center p-1">
                    <div class="col-auto">
                        <label for="selectTipo" class="col-form-label text-primary labels">Conta:</label>
                    </div>
                    <div class="col-auto">
                        <select class="form-select-sm" id="contaExtrato" asp-for="ContaId">
                            <option value="" selected>Selecione...</option>
                            @{
                                foreach (var conta in Model.Contas)
                                {
                                    <option value="@conta.Id">@conta.Banco</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="row g-1 align-items-center p-1">
                    <div class="col-auto">
                        <label for="valorFiltro" class="col-form-label text-primary labels">Valor:</label>
                    </div>
                    <div class="col-auto">
                        <input type="text" name="valor" id="valorFiltro"/>
                    </div>
                </div>

                <div class="align-items-center ms-2 p-1" id="divBtnsExtrato">
                    <a type="button" asp-action="Index" asp-controller="Extrato" class="btn btn-sm btn-info btnLimparExtrato" id="btnLimparExtrato" 
                    data-datainicial="@Model.DataInicial?.ToString("yyyy-MM-dd")"
                    data-datafinal="@Model.DataFinal?.ToString("yyyy-MM-dd")">Limpar</a>
                    <button type="submit" class="btn btn-sm btn-primary ms-2 btnFiltrarExtrato" id="btnFiltrarExtrato">Filtrar</button>  
                </div>
            </div>    
        </div>
    </form>
        
        
    <table class="table table-primary border border-2 table-hover" id="table-extrato">
        <thead>
            <tr>
                <th scope="col">Data</th>
                <th scope="col">Descrição</th>
                <th scope="col">Tipo</th>
                <th scope="col">Categoria</th>
                <th scope="col">Conta</th>
                <th scope="col">Valor</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @{
                var lancamentosPorData = Model.Movimentos
                    .GroupBy(l => l.Data.Date)
                    .OrderBy(g => g.Key)
                    .ToList();

                double saldoTotal = 0;

                if (lancamentosPorData.Any())
                {
                    foreach(var grupo in lancamentosPorData)
                    {
                        @* var rowClass = item.Origem switch
                        {
                            "Recorrente" => "table-warning",
                            "Transferencia" => "table-info",
                            _ => item.Tipo == "Receita" ? "table-success" : "table-danger"
                        }; *@

                        var saldoDia = grupo.Sum(l => l.Tipo == "Receita" ? l.Valor : -l.Valor);

                        saldoTotal += saldoDia;

                        foreach (var item in grupo)
                        {
                            <tr class="table-custom border border-1">
                            <th scope="row" id="dataExtrato">@item.Data.ToString("dd/MM/yyyy")</th>
                            <td>@item.Descricao</td>
                                @if (item.Tipo == "Receita")
                                {
                                    <td class="text-success-emphasis">@item.Tipo</td>
                                }
                                else if(item.Tipo == "Despesa")
                                {
                                    <td class="text-danger">@item.Tipo</td>
                                }
                                else if(item.Tipo == "Transferencia")
                                {
                                    <td class="text-info">@item.Tipo</td>
                                }
                            <td>@item.Categoria</td>
                            <td>@item.Conta</td>
                            <td>@item.Valor.ToString("N2")</td>
                            <td>
                                @if (item.Origem == "Lancamento")
                                {
                                    <a asp-controller="Lancamento" asp-action="Editar" asp-route-id="@item.Id"><i class="bi bi-eye-fill text-info"></i></a>
                                }
                                else if (item.Origem == "Recorrente")
                                {
                                    <a asp-controller="Recorrente" asp-action="Editar" asp-route-id="@item.Id"><i class="bi bi-eye-fill text-info"></i></a>
                                }
                                else if (item.Origem == "Transferencia")
                                {
                                    <a asp-controller="Transferencia" asp-action="Visualizar" asp-route-id="@item.Id"><i class="bi bi-eye-fill text-info"></i></a>
                                }
                            </td>
                        </tr>
                        }
                        // Saldo do dia
                        <tr class="table-info text-dark">
                            <td colspan="7">
                                Saldo do dia: @saldoDia.ToString("C") | Saldo Total: @saldoTotal.ToString("C");
                            </td>
                        </tr>
                    }
                }
                else 
                {
                    <tr class="table-custom text-dark">
                        <td colspan="7">
                            <h5 class="text-primary text-center">Nenhum lançamento encontrado!</h5>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
