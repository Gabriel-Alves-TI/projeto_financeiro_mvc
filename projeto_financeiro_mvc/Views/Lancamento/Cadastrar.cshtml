@model projeto_financeiro_mvc.ViewModels.LancamentoViewModel
@{
    ViewData["Title"] = "Novo Lançamento";
}

<h1 class="d-flex justify-content-center text-primary fw-bold mt-2">@ViewData["Title"]</h1>

<div class="container">
    <div class="card mb-3 rounded-3 border-primary">
        <form asp-controller="Lancamento" asp-action="Cadastrar" method="post">
            <div class="card-body">
                <div class="d-flex justify-content-between bg-primary bg-opacity-25 rounded">
                    <div class="row g-2 align-items-center p-2">
                        <div class="col-auto">
                            <label asp-for="Lancamento.Valor" class="col-form-label fs-4 text-primary">Valor:</label>
                        </div>
                        <div class="col-auto">
                            <input type="text" name="Lancamento.Valor" asp-for="Lancamento.Valor" class="rounded border-1 w-50 fs-5" style="height: 35px;" id="valorLancamento">
                        </div>
                    </div>
                    <div class="row g-2 align-items-center p-2">
                        <div class="col-auto">
                            <label for="parcelas" asp-for="Lancamento.Parcelas" class="col-form-label fs-5 text-primary">Parcelas:</label>
                        </div>
                        <div class="col-auto">
                            <input type="number" asp-for="Lancamento.Parcelas" name="Lancamento.Parcelas" id="parcelas" class="rounded border-1 p-1 w-25">
                        </div>
                    </div>
                    <div class="row g-2 align-items-center p-2">
                        <div class="col-auto">
                            <label for="selectTipo" asp-for="Lancamento.Data" class="col-form-label fs-5 text-primary">Data:</label>
                        </div>
                        <div class="col-auto">
                            <input type="date" asp-for="Lancamento.Data" class="rounded border-1 p-1" id="dataLancamento">
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between bg-primary bg-opacity-25 rounded mt-1">
                    <div class="row g-2 align-items-center p-2">
                        <div class="col-auto">
                            <label for="selectTipo" asp-for="Lancamento.Tipo" class="col-form-label fs-5 text-primary">Tipo:</label>
                        </div>
                        <div class="col-auto">
                            <select class="form-select border-2 bg-white text-primary" asp-for="Lancamento.Tipo" name="Lancamento.Tipo">
                                <option value="0" selected>Receita</option>
                                <option value="1">Despesa</option>
                            </select>
                        </div>
                    </div>
                    <div class="row g-2 align-items-center p-2">
                        <div class="col-auto">
                            <label for="selectTipo" asp-for="Lancamento.Previsao" class="col-form-label fs-5 text-primary">Prev. Pagamento:</label>
                        </div>
                        <div class="col-auto">
                            <input type="date" asp-for="Lancamento.Previsao" class="rounded border-1 p-1">
                        </div>
                    </div>
                </div>
                <div class="p-2 mb-1">
                    <label asp-for="Lancamento.Descricao" class="form-label fs-5 text-primary">Descrição:</label>
                    <textarea class="form-control bg-white border-1 border-dark text-primary" asp-for="Lancamento.Descricao" name="Lancamento.Descricao" rows="1" style="max-height: 80px;"></textarea>
                </div>
                <div class="d-flex justify-content-between">
                    <div class="row g-2 align-items-center p-2">
                        <div class="col-auto">
                            <label asp-for="Lancamento.Categoria" class="col-form-label fs-5 text-primary">Categoria:</label>
                        </div>
                        <div class="col-auto">
                            <select class="form-select bg-white text-primary border border-dark border-1" asp-for="Lancamento.Categoria" name="Lancamento.Categoria">
                                <option selected>Selecione...</option>
                                <option value="Água">Água</option>
                                <option value="Alimentação VA">Alimentação VA</option>
                                <option value="Aluguel">Aluguel</option>
                                <option value="Carro">Carro</option>
                                <option value="Casa">Casa</option>
                                <option value="Combustível">Combustível</option>
                                <option value="Diversos">Despesas Mayte</option>
                                <option value="Diversos">Diversos</option>
                                <option value="Eletrônicos">Eletrônicos</option>
                                <option value="Empréstimo">Empréstimo</option>
                                <option value="Energia">Energia</option>
                                <option value="Estacionamento">Estacionamento</option>
                                <option value="Estudo">Estudo</option>
                                <option value="Fast Food">Fast Food</option>
                                <option value="FGTS">FGTS</option>
                                <option value="Férias">Férias</option>
                                <option value="Financiamento">Financiamento</option>
                                <option value="Internet">Internet</option>
                                <option value="Móveis">Móveis</option>
                                <option value="Salário">Salário</option>
                                <option value="Saldo Inicial">Saldo Inicial</option>
                                <option value="Telefone">Telefone</option>
                                <option value="Transporte">Transporte</option>
                                <option value="TV">TV</option>
                                <option value="Roupas">Roupas</option>
                            </select>
                        </div>
                    </div>
                    <div class="row g-2 align-items-center p-2">
                        <div class="col-auto">
                            <label asp-for="Lancamento.ContaId" class="col-form-label fs-5 text-primary">Conta:</label>
                        </div>
                        <div class="col-auto">
                            <select class="form-select bg-white text-primary border border-dark border-1" asp-for="Lancamento.ContaId">
                                <option value="">Selecione...</option>
                                @foreach (var conta in (Model.Contas))
                                {
                                    <option value="@conta.Id">@conta.Banco</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between align-items-center w-100 p-3">
                <button type="submit" class="btn btn-success w-25" id="btnConfirmar">Confirmar</button>
                <a asp-controller="Lancamento" asp-action="Index" class="btn btn-danger w-25" id="btn-cancelar">Cancelar</a>
            </div>
        </form>
    </div>
</div>
